@article{Vaccarino2021a,
  title = {Association of {{Mental Stress-Induced Myocardial Ischemia}} with {{Cardiovascular Events}} in {{Patients}} with {{Coronary Heart Disease}}},
  author = {Vaccarino, Viola and Almuwaqqat, Zakaria and Kim, Jeong Hwan and Hammadah, Muhammad and Shah, Amit J. Anish and Ko, Yi An and Elon, Lisa and Sullivan, Samaah and Shah, Amit J. Anish and Alkhoder, Ayman and Lima, Bruno B. and Pearce, Brad and Ward, Laura and Kutner, Michael and Hu, Yingtian and Lewis, Ten√© T. and Garcia, Ernest V. and Nye, Jonathon and Sheps, David S. and Raggi, Paolo and Bremner, J. Douglas and Quyyumi, Arshed A.},
  date = {2021-11-09},
  journaltitle = {JAMA - Journal of the American Medical Association},
  volume = {326},
