@article{Perlis2016,
  title = {Suicide and Sleep: {{Is}} It a Bad Thing to Be Awake When Reason Sleeps?},
  author = {Perlis, Michael L and Grandner, Michael A and Chakravorty, Subhajit and Bernert, Rebecca A and Brown, Gregory K and Thase, Michael E},
