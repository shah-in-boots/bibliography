  author = {Pimple, Pratik and Shah, Amit J. and Rooks, Cherie and Douglas Bremner, J. and Nye, Jonathon and Ibeanu, Ijeoma and Raggi, Paolo and Vaccarino, Viola},
  date = {2015-05},
  journaltitle = {Journal of Psychosomatic Research},
  volume = {78},
