@article{Patil2015b,
  title = {Cardiac {{Arrest}}: {{Resuscitation}} and {{Reperfusion}}},
  author = {Patil, Kaustubha D. and Halperin, Henry R. and Becker, Lance B.},
  date = {2015-06-05},
  journaltitle = {Circulation Research},
