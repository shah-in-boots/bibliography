  author = {Lu, Zhibing and Scherlag, Benjamin J. and Lin, Jiaxiong and Yu, Lilei and Guo, Ji Hong and Niu, Guodong and Jackman, Warren M. and Lazzara, Ralph and Jiang, Hong and Po, Sunny S.},
