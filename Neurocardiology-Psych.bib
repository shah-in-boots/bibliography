doi = {10.1016/j.bspc.2015.02.012},
file = {:Users/asshah4/OneDrive - University of Illinois at Chicago/articles/2015{\_}Castaldo et al.{\_}Acute mental stress assessment via short term HRV analysis in healthy adults A systematic review with meta-analysis.pdf:pdf},
