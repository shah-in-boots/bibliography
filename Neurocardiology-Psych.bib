issn = {1662453X},
keywords = {Anterior cingulate cortex,Cortical thickness,Depression,Heart rate variability,PTSD,Resilience,Stress},
month = {apr},
number = {APR},
pages = {228},
publisher = {Frontiers Media S.A.},
title = {{Autonomic and brain morphological predictors of stress resilience}},
