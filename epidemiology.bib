}

@article{Diamant2021,
  title = {Heart Failure and Atrial Flutter: A Systematic Review of Current Knowledge and Practices},
  author = {Diamant, Michael J. and Andrade, Jason G. and Virani, Sean A. and Jhund, Pardeep S. and Petrie, Mark C. and Hawkins, Nathaniel M.},
