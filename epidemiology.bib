@article{Bremner2018,
  title = {Brain {{Correlates}} of {{Mental Stress-Induced Myocardial Ischemia}}},
  author = {Bremner, J. Douglas and Campanella, Carolina and Khan, Zehra and Shah, Majid and Hammadah, Muhammad and Wilmot, Kobina and Al Mheid, Ibhar and Lima, Bruno B. and Garcia, Ernest V. and Nye, Jonathon and Ward, Laura and Kutner, Michael H. and Raggi, Paolo and Pearce, Brad D. and Shah, Amit J. and Quyyumi, Arshed A. and Vaccarino, Viola},
