@article{Ossola2018,
  title = {Anxiety, {{Depression}}, and {{Cardiac Outcomes}} after a First {{Acute Coronary Syndrome}}},
  author = {Ossola, Paolo and Gerra, Maria Lidia and Panfilis, Chiara De and Tonna, Matteo and Marchesi, Carlo},
