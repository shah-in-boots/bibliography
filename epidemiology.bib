@article{Pimple2014,
  title = {Association between Anger and Mental Stress-Induced Myocardial Ischemia},
  author = {Pimple, Pratik and Shah, Amit and Rooks, Cherie and Bremner, J. Douglas and Nye, Jonathon and Ibeanu, Ijeoma and Murrah, Nancy and Shallenberger, Lucy and Kelley, Mary and Raggi, Paolo and Vaccarino, Viola},
  date = {2014-01},
  journaltitle = {American Heart Journal},
  volume = {169},
  number = {1},
  eprint = {25497256},
  eprinttype = {pmid},
