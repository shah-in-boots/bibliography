  date = {2021-12-01},
  journaltitle = {JAMA Internal Medicine},
  volume = {181},
  number = {12},
  eprint = {34694318},
  eprinttype = {pmid},
  pages = {1575--1587},
  publisher = {{American Medical Association}},
  issn = {21686114},
