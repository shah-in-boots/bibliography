  keywords = {ðŸ”´,Anger,Cardiovascular disease,Case-crossover,Epidemiology}
}

@article{Nievergelt2015,
  title = {Genomic Predictors of Combat Stress Vulnerability and Resilience in {{U}}.{{S}}. {{Marines}}: {{A}} Genome-Wide Association Study across Multiple Ancestries Implicates {{PRTFDC1}} as a Potential {{PTSD}} Gene},
  author = {Nievergelt, Caroline M. and Maihofer, Adam X. and Mustapic, Maja and Yurgil, Kate A. and Schork, Nicholas J. and Miller, Mark W. and Logue, Mark W. and Geyer, Mark A. and Risbrough, Victoria B. and O'Connor, Daniel T. and Baker, Dewleen G.},
  date = {2015-01},
  journaltitle = {Psychoneuroendocrinology},
  volume = {51},
  eprint = {25456346},
