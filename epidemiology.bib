@article{OFee2021,
  title = {Assessment of {{Nonfatal Myocardial Infarction}} as a {{Surrogate}} for {{All-Cause}} and {{Cardiovascular Mortality}} in {{Treatment}} or {{Prevention}} of {{Coronary Artery Disease}}: {{A Meta-analysis}} of {{Randomized Clinical Trials}}},
