  author = {Bazan, Victor and Grau, Nuria and Valles, Ermengol and Felez, Miquel and Sanjuas, Carles and Cainzos-Achirica, Miguel and Benito, BegoÃ±a and Jauregui-Abularach, Miguel and Gea, Joaquim and Bruguera-Cortada, Jordi and Marti-Almor, Julio},
