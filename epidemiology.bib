@article{Abdullah2018,
  title = {Long-{{Term Association}} of {{Low-Density Lipoprotein Cholesterol}} with {{Cardiovascular Mortality}} in {{Individuals}} at {{Low}} 10-{{Year Risk}} of {{Atherosclerotic Cardiovascular Disease}}: {{Results}} from the {{Cooper Center Longitudinal Study}}},
