  author = {Yannopoulos, Demetris and Bartos, Jason A. and Aufderheide, Tom P. and Callaway, Clifton W. and Deo, Rajat and Garcia, Santiago and Halperin, Henry R. and Kern, Karl B. and Kudenchuk, Peter J. and Neumar, Robert W. and Raveendran, Ganesh},
