@article{Moazzami2020,
  title = {Higher {{Activation}} of the {{Rostromedial Prefrontal Cortex}} during {{Mental Stress Predicts Major Cardiovascular Disease Events}} in {{Individuals}} with {{Coronary Artery Disease}}},
  author = {Moazzami, Kasra and Wittbrodt, Matthew T. and Lima, Bruno B. and Nye, Jonathon A. and Mehta, Puja K. and Pearce, Brad D. and Almuwaqqat, Zakaria and Hammadah, Muhammad and Levantsevych, Oleksiy and Sun, Yan V. and Raggi, Paolo and Garcia, Ernest V. and Goetz, Margarethe and Quyyumi, Arshed A. and Bremner, J. Douglas and Vaccarino, Viola and Shah, Amit J.},
