doi = {10.1161/CIRCULATIONAHA.117.030849},
file = {:C$\backslash$:/Users/asshah4/Box Sync/Mendeley{\_}Articles//2018 - Vaccarino et al. - Mental stress-induced-myocardial ischemia in young patients with recent myocardial infarction Sex differences.pdf:pdf},
