file = {:C$\backslash$:/Users/asshah4/Box Sync/Mendeley{\_}Articles//2018 - Hu et al. - Association between depression, anxiety, and antidepressant use with T-Wave amplitude and QT-interval.pdf:pdf},
issn = {1662453X},
