isbn = {1534-7796 (Electronic)$\backslash$r0033-3174 (Linking)},
issn = {00333174},
journal = {Psychosomatic Medicine},
keywords = {Cardiovascular disease,Depression,Posttraumatic stress disorder,Survival analysis,Veterans},
