pages = {iii7--iii7},
publisher = {Oxford Academic},
title = {{Acute and chronic withdrawal of dorsal vagal preganglionic activity in the central nervous system predisposes to ventricular arrhythmia}},
url = {https://academic.oup.com/europace/article/16/suppl{\_}3/iii7/517050},
volume = {16},
