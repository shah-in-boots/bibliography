journal = {Circulation},
month = {sep},
number = {3},
pages = {623--31},
pmid = {4017213},
title = {{Interruption of sympathetic and vagal-mediated afferent responses by transmural myocardial infarction.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/4017213},
volume = {72},
year = {1985}
}
