author = {Yusuf, Prof Salim and Hawken, Steven and {\^{O}}unpuu, Stephanie and Dans, Tony and Avezum, Alvaro and Lanas, Fernando and McQueen, Matthew and Budaj, Andrzej and Pais, Prem and Varigos, John and Lisheng, Liu},
