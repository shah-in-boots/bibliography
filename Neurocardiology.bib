journal = {Biophysical Journal},
month = {jan},
number = {2},
pages = {319--333},
pmid = {33285114},
publisher = {The Biophysical Society},
title = {{Circadian Rhythms of Early Afterdepolarizations and Ventricular Arrhythmias in a Cardiomyocyte Model}},
url = {/pmc/articles/PMC7840416/ /pmc/articles/PMC7840416/?report=abstract https://www.ncbi.nlm.nih.gov/pmc/articles/PMC7840416/},
