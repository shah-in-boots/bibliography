issn = {18727484},
keywords = {Anxiety,Autonomic nervous system,Depression,Heart rate variability,Young people},
month = {dec},
pages = {1--14},
pmid = {28870754},
title = {{Clinical and non-clinical depression and anxiety in young people: A scoping review on heart rate variability}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/28870754 https://linkinghub.elsevier.com/retrieve/pii/S1566070216302181},
