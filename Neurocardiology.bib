journal = {Chronobiology International},
keywords = {Hybrid data,Multifrequency modeling,Multiple components analysis,Periodic regression,Population-mean cosinor},
number = {2},
pages = {191--204},
title = {{Inferential statistical method for analysis of nonsinusoidal hybrid time series with unequidistant observations}},
