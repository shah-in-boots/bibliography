doi = {10.1161/01.CIR.98.6.547},
file = {:Users/asshah4/OneDrive - University of Illinois at Chicago/articles/1998{\_}Taylor et al.{\_}Mechanisms underlying very-low-frequency RR-interval oscillations in humans.pdf:pdf},
