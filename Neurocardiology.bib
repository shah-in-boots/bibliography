title = {{An open source benchmarked toolbox for cardiovascular waveform and interval analysis}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/30199376 http://stacks.iop.org/0967-3334/39/i=10/a=105004?key=crossref.2d9731857ae3ed429d35fce67e8ffe19},
