issn = {18741754},
journal = {International Journal of Cardiology},
pages = {25--28},
pmid = {28318666},
title = {{Cardiac sympathetic denervation 100 years later: Jonnesco would have never believed it}},
url = {http://dx.doi.org/10.1016/j.ijcard.2017.03.0200167-5273/},
volume = {237},
year = {2017}
}
