title = {{Autonomic control of the heart: Going beyond the classical neurotransmitters}},
url = {https://www-ncbi-nlm-nih-gov.proxy.library.emory.edu/pmc/articles/PMC4405038/pdf/eph0100-0354.pdf},
volume = {100},
