author = {Glassman, Alexander H. and Bigger, J. Thomas and Gaffney, Michael and {Van Zyl}, Louis T.},
booktitle = {Archives of General Psychiatry},
doi = {10.1001/archpsyc.64.9.1025},
file = {:Users/shahbook/Box Sync/Mendeley_Articles/2007 - Glassman et al. - Heart rate variability in acute coronary syndrome patients with major depression influence of sertraline and mo.pdf:pdf},
isbn = {0003-990X},
