title = {{Social isolation as a promising animal model of PTSD comorbid suicide: neurosteroids and cannabinoids as possible treatment options}},
url = {https://www.sciencedirect.com/science/article/pii/S0278584618305839?dgcid=rss_sd_all https://linkinghub.elsevier.com/retrieve/pii/S0278584618305839},
