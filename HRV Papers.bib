@article{Sur2013,
abstract = {BACKGROUND: Recently we showed the predictive value of sum absolute QRST integral (SAI QRST) and repolarization lability for risk stratification of sudden cardiac death (SCD) in heart failure patients. The goal of this study was to compare SAI QRST and metrics of depolarization and repolarization variability in healthy men and women.

