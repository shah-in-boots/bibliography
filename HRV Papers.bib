@article{Nakata2013,
abstract = {OBJECTIVES: The study objectives were to create a cardiac metaiodobenzylguanidine (mIBG) database using multiple prospective cohort studies and to determine the quantitative iodine-123-labeled mIBG indices for identifying patients with chronic heart failure (HF) at greatest and lowest risk of lethal events.

